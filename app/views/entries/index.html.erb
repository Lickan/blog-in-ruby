<h1>Listing entries</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Content</th>
    <th>Posted by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @entries.each do |entry| %>
  <tr>
    <td><%= entry.id %></td>
    <td><%= entry.title %></td>
    <td><%= entry.content %></td>
    <td><%= entry.posted_by %></td>
    <td><%= link_to 'Show', entry %></td>
    <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
    <td><%= link_to 'Destroy', entry, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

